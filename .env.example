# Deltaware Solutions Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# ==========================================
# These are exposed to the browser (prefix with VITE_)

# API URL (where the Express backend is running)
VITE_API_URL=http://localhost:3001

# Supabase (for frontend - optional, only if needed client-side)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Certification Verification URL
VITE_CERTIFICATION_URL=https://certificate.deltawaresolution.com/

# ==========================================
# BACKEND ENVIRONMENT VARIABLES (Express)
# ==========================================
# These are server-side only (not exposed to browser)

# Server Port
API_PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Configuration (SMTP)
EMAIL_HOST=your_email_host
EMAIL_PORT=your_email_port
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_email_from_address
